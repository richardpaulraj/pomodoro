{
  "manifest_version": 3,
  "name": "Promodome Timer",
  "version": "1.0.0",
  "description": "Helps you focus and gets you things done",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icons": {
      "16": "icon.png",
      "48": "icon.png",
      "32": "icon.png"
    },
    "default_title": "Click me to Open Promodome Timer",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html"
}
